{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"outDir": "lib",
		"declaration": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src", "src/*.ts", "src/**.tsx", "src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", "pages", "public"]
}
