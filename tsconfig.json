{
	"compilerOptions": {
	  "rootDir": "src",
	  "declaration": true,
	  "declarationDir": "build",
	  "module": "esnext",
	  "target": "es5",
	  "lib": ["es6", "dom", "es2016", "es2017"],
	  "sourceMap": true,
	  "jsx": "react",
	  "moduleResolution": "node",
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true
	},
	"include": ["src/**/*", "src/*"],
	"exclude": ["node_modules", "pages", "public", "out", "dist", "docs", "src/**/*.module.css" ]
}
